            <li id="payment-text" onclick="navclick(this)">payments</li>
          </ul>
        </div>
        <div class="main-container">
          <div class="shortcuts">
            <button class="userButton">
              <img src="user.svg" alt="" />
            </button>
          </div>
          <section id="home">
            <h2>Hii, USER</h2>

            <div class="information-section">
              <div class="information-card">
                <h5>TOTAL ORDERS</h5>
              </div>
              <div class="information-card">
                <h5>TOTAL SALES</h5>
              </div>
            </div>
            <div class="order-details">
              <h3>New Orders</h3>
            </div>
          </section>
          <section id="products">
            <h1>Products</h1>
          </section>
          <section id="orders">
            <h1>orders</h1>

          </section>
          <section id="payments">
            <h1>payments</h1>
          </section>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/dashboardhandler.js"></script>
  
  </body>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/seller_dashboard.css" />
    <title>Dashboard</title>
  </head>
  <body>
    <div class="wrapper">

      <div class="containers">
        <div class="side-nav">
          <div class="logo">
            <img src="LOGO.svg" alt="ShopIT" />
          </div>
          <ul>
            <li id="home-Text"S onclick="navclick(this)">Home</li>
            <li id="Product-text" onclick="navclick(this)">Products</li>
